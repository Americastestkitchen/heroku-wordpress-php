#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.2.22"
APACHE_PATH="apache"
PHP_VERSION="5.3.10"
PHP_PATH="php"
BUILDPACK_VERSION="v1.0.5"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move app things to www
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

CACHE_VERSION=''
if [ -f $CACHE_DIR/VERSION ]; then
  CACHE_VERSION=`cat $CACHE_DIR/VERSION`
fi

# unpack cache
for DIR in $APACHE_PATH $PHP_PATH "local"; do
  rm -rf $DIR
  if [ "$CACHE_VERSION" == "$BUILDPACK_VERSION" ]; then
    if [ -d $CACHE_DIR/$DIR ]; then
      cp -r $CACHE_DIR/$DIR $DIR
    fi
  fi
done

# install apache if needed
if [ ! -d $APACHE_PATH ]; then
  APACHE_URL="https://s3.amazonaws.com/heroku-buildpack-binaries/$BUILDPACK_VERSION/apache-$APACHE_VERSION.tar.gz"
  echo "-----> Bundling Apache v$APACHE_VERSION"
  curl --silent --max-time 60 --location $APACHE_URL | tar xz
fi

# install php if needed
if [ ! -d $PHP_PATH ]; then
  PHP_URL="https://s3.amazonaws.com/heroku-buildpack-binaries/$BUILDPACK_VERSION/php-$PHP_VERSION.tar.gz"
  echo "-----> Bundling PHP v$PHP_VERSION"
  curl --silent --max-time 60 --location $PHP_URL | tar xz
fi

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini php

# make php available on bin
mkdir -p bin
ln -s /app/php/bin/php bin/php

cat >>boot.sh <<EOF

echo "Using buildpack version $BUILDPACK_VERSION"
sed -i 's/Listen 80/Listen '\$PORT'/' /app/apache/conf/httpd.conf

echo "Checking for WWWROOT environment variable..."
if [ -n "\${WWWROOT:+x}" ]; then
  sed -ie "s%/app/www%/app/www\$WWWROOT%" /app/apache/conf/httpd.conf
fi

for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/local/lib
export PHP_INI_SCAN_DIR=/app/www
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# repack cache
mkdir -p $CACHE_DIR
for DIR in $APACHE_PATH $PHP_PATH "local"; do
  rm -rf $CACHE_DIR/$DIR
  cp -R $DIR $CACHE_DIR/$DIR
done
echo $BUILDPACK_VERSION > $CACHE_DIR/VERSION
